.container
    .well
        form.form-horizontal(name="newRecordForm")
            fieldset
                legend New Post
                .form-group
                    label.col-md-2.control-label(for="title") Title
                    .col-md-10
                        input.form-control(name="title", type="text", placeholder="Title", ng-model="title", required)
                .form-group
                    label.col-md-2.control-label(for="text") Text
                    .col-md-10
                        input.form-control(name="text", type="text", placeholder="Text", ng-model="text", required)
                .form-group
                    label.col-md-2.control-label(for="author") Author
                    .col-md-10
                        input.form-control(name="author", type="text", placeholder="Author", ng-model="author", required)
                .form-group
                    .col-md-10.col-md-offset-2
                        .pull-right
                            button.btn.btn-primary(ng-click="createPost()", ng-disabled="newRecordForm.$invalid") Submit
                            | &nbsp;
                            a.btn.btn-default(href="/") Cancel
