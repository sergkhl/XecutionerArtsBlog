.container
    h1 {{blogrecord.title}}
    .row
        .col-md-6
            h3(ng-show="blogrecord.featured") Featured
            h3 Published on {{blogrecord.published | date}}
            div(ng-bind-html="blogrecord.text")

        .col-md-6
            .panel.panel-primary
                .panel-heading Tags
                .panel-body
                    div(ng-repeat="tag in blogrecord.tags") {{tag}}